@page "/problem/{ProblemId:int}"
@using CodeHub.Data.Models
@using CodeHub.Services
@inject IJSRuntime JS
@inject ProblemService ProblemService
@inject TagService TagService

<PageTitle>Problem Details</PageTitle>

<div class="container-fluid h-100 p-4">
    <div class="row h-100">
        <div class="col-md-6 p-4 text-white overflow-y-auto">
            <h2 class="font-bold">@_problem?.Title</h2>

            <div class="mb-4">
                @if (_tags != null && _tags.Any())
                {
                    <div class="d-flex flex-wrap gap-2">
                        @foreach (var tag in _tags)
                        {
                            <span class="badge bg-primary">@tag.Name</span>
                        }
                    </div>
                }
            </div>

            <p class="text-gray-400 mb-6 pb-4">@_problem?.Description</p>

            <div class="mb-4 pb-4">
                <h5 class="text-lg font-semibold">Príklad:</h5>
                <p><strong>Vstup:</strong> @_problem?.RequiredInput</p>
                <p><strong>Výstup:</strong> @_problem?.RequiredOutput</p>
            </div>

            <div class="mb-4 pb-4">
                <h5 class="text-lg font-semibold">Obmedzenia:</h5>
                <p>@_problem?.Constraints</p>
            </div>

            <div class="pb-4">
                <h5 class="text-lg font-semibold">Nápoveda:</h5>
                <p class="d-inline-flex gap-1">
                    <button class="btn btn-outline-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseHint" aria-expanded="false" aria-controls="collapseHint">
                        Zobraziť nápovedu
                    </button>
                </p>
                <div class="collapse" id="collapseHint">
                    <p>@_problem?.Hints</p>
                </div>
            </div>
        </div>

        <div class="col-md-6 p-4 text-white">
            <h5 class="text-lg font-semibold">Editor:</h5>
            <div id="editorContainer" style="height: 60vh; border: 3px solid #0000cc; border-radius: 6px"></div>
            <div class="mt-3 d-flex justify-content-between">
                <button class="btn btn-primary align-self-start" @onclick="GetEditorValue">Get Code</button>
                <div class="d-flex gap-2">
                    <div class="dropdown">
                        <button class="btn btn-success dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Jazyk: @_selectedLanguage
                        </button>
                        <ul class="dropdown-menu dropdown-menu-dark">
                            <li><a class="dropdown-item @(_selectedLanguage == "java" ? "active" : "")" @onclick="@(() => ChangeLanguage("Java"))">Java</a></li>
                            <li><a class="dropdown-item @(_selectedLanguage == "csharp" ? "active" : "")" @onclick="@(() => ChangeLanguage("C#"))">C#</a></li>
                        </ul>
                    </div>
                    <div class="dropdown">
                        <button class="btn btn-info dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Režim: @(_selectedTheme == "vs-dark" ? "Tmavý" : "Svetlý")
                        </button>
                        <ul class="dropdown-menu dropdown-menu-dark">
                            <li><a class="dropdown-item @(_selectedTheme == "vs-dark" ? "active" : "")" @onclick="@(() => ChangeTheme("vs-dark"))">Tmavý režim</a></li>
                            <li><a class="dropdown-item @(_selectedTheme == "vs" ? "active" : "")" @onclick="@(() => ChangeTheme("vs"))">Svetlý režim</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
