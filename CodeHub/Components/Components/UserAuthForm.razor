@using CodeHub.Services

<div class="user-auth">
    <div class="card p-lg-5 p-md-4 p-3 col-lg-4 col-md-6 col-12" data-bs-theme="dark">
        <div class="text-center mb-5">
            <img src="images/logo.png" alt="Logo" style="width: 80px;">
            <h3 class="mb-3">@Title</h3>
        </div>
        <EditForm Model="@user" OnValidSubmit="HandleRegistrationAsync" FormName="@FormName">
            @if (showNickname)
            { 
                <div class="form-floating">
                    <InputText id="UsernameInput" type="text" @bind-Value="@user.Username" class="form-control" placeholder="Prezývka" />
                    <label for="UsernameInput">Prezývka</label>
                </div>
            }
            <div class="form-floating">
                <InputText id="EmailInput" type="email" @bind-Value="@user.Email" class="form-control" placeholder="meno@example.com"/>
                <label for="EmailInput">E-mailová adresa</label>
            </div>
            <div class="form-floating">
                <InputText id="PasswordInput" type="password" @bind-Value="@user.Password" class="form-control" placeholder="Heslo" />
                <label for="PasswordInput">Heslo</label>
            </div>
            @if (ShowConfirmPassword)
            {
                <div class="form-floating mt-3">
                    <input type="password" class="form-control" id="floatingInput" placeholder="Potvrďte heslo">
                    <label for="floatingInput">Potvrďte heslo</label>
                </div>
            }
            @if (ShowPasswordLayout)
            {
                <div id="passwordHelpBlock" class="form-text pb-4">
                    Vaše heslo musí mať aspoň 8 znakov, musí obsahovať písmená a čísla.
                </div>
            }
            @if (ShowRememberMe)
            {
                <div class="mb-3 form-check pt-1">
                    <input type="checkbox" class="form-check-input" id="exampleCheck1">
                    <label class="form-check-label" for="exampleCheck1">Zostať prihlásený</label>
                </div>
            }
            <button type="submit" class="btn btn-primary">@ButtonLabel</button>
        </EditForm>
    </div>
</div>